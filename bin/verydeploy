#!/bin/bash

cd $VERYPATH

if [ "$1" = "all" ] 
then
	COPY=`find $VERYPATH | grep -v git | grep -v node_modules | grep -v DS_Store | grep -v -e '^\.$' | grep -v "^$VERYPATH$"`;
else
	COPY=`find $VERYPATH | grep -v git | grep -v node_modules | grep -v DS_Store | grep -v -e '^\.$' | grep -v "^$VERYPATH$" | grep -v wav`;
fi

echo $COPY
scp $COPY veryshare1:veryshare

